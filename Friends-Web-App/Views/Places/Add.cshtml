@model Friends_Web_App.Models.PlacesViewModel

<h1>Add Places</h1>

<form method="post">
	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>
	<div class="mt-3">
		<label class="form-label">Description</label>
		<input type="text" class="form-control" asp-for="Description" />
	</div>
	<div class="mt-3">
		<label class="form-label">State</label>
		<select class="form-control" asp-for="Negeri" asp-items="Html.GetEnumSelectList<Friends_Web_App.Models.Negeri>()"></select>
		<span class="text-danger" asp-validation-for="Negeri"></span>
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>