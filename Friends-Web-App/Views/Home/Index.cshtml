@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" style="font-family: Arial, sans-serif; margin-top: 50px;">
    <h1 class="display-4" style="color: #4CAF50; font-weight: bold;">Welcome to F.R.I.E.N.D.S.</h1>
    <p style="font-size: 1.2rem; color: #555;">
        Discover, connect, and collaborate with us!
    </p>
    <p style="font-size: 1rem; color: #777;">
        <em>Brought to you by Group 18</em>
    </p>

    <div style="margin-top: 50px;">
        <img src="/images/dotnet.jpg" alt="F.R.I.E.N.D.S Banner" style="max-width: 100%; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
    </div>
</div>

<style>
    body {
        background: linear-gradient(90deg, #ffcc80, #ffab91); /* Orange to pink gradient */
        color: #333;
    }
    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        text-transform: uppercase;
    }
    .btn-primary {
        background-color: #4CAF50;
        border: none;
        color: white;
    }
    .btn-primary:hover {
        background-color: #45a049;
    }
    .btn-secondary {
        background-color: #555;
        border: none;
        color: white;
    }
    .btn-secondary:hover {
        background-color: #441;
    }
</style>