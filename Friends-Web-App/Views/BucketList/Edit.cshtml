@model Friends_Web_App.Models.BucketListViewModel

<h1>Edit Bucket List Item</h1>

@if (Model is null)
{
    <p>No bucket list item found! Add some.</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="BucketListId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <label class="form-label">Rating</label>
            <input type="number" class="form-control" asp-for="rating" min="1" max="5" />
        </div>
        <div class="mt-3">
            <label class="form-label">Status</label>
            <select class="form-control" asp-for="status" asp-items="Html.GetEnumSelectList<Friends_Web_App.Models.Status>()"></select>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}
