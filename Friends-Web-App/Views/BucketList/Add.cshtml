@model Friends_Web_App.Models.BucketListViewModel

<h1>Add Bucket List Item</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>
    <div class="mt-3">
        <label class="form-label">Rating</label>
        <input type="number" class="form-control" asp-for="rating" min="1" max="5" />
    </div>
    <div class="mt-3">
        <label class="form-label">Status</label>
        <select class="form-control" asp-for="status" asp-items="Html.GetEnumSelectList<Friends_Web_App.Models.Status>()"></select>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
