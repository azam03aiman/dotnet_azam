@model Friends_Web_App.Models.FriendViewModel

<h1>Edit Friends</h1>

@if(Model is null){
    <p>No friends is found with this</p>
} else {
    <form method="post">
        <div class="mt-3">
            <label class="form-label"> Id </label>
            <input type="text" class="form-control" asp-for=Id readonly />
        </div>
		<div class="mt-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>
		<div class="mt-3">
			<label class="form-label">Age</label>
			<input type="number" class="form-control" asp-for="age" />
		</div>
		<div class="mt-3">
			<label class="form-label">Year</label>
			<input type="number" class="form-control" asp-for="Year" />
		</div>
		<div class="mt-3">
			<label class="form-label">Phone Number</label>
			<input type="text" class="form-control" asp-for="Phone" />
		</div>
		<div class="mt-3">
			<label class="form-label">Gender</label>
			<select class="form-control" asp-for="Gender" asp-items="Html.GetEnumSelectList<Friends_Web_App.Models.GenderType>()"></select>
			<span class="text-danger" asp-validation-for="Gender"></span>
		</div>
		<div class="mt-3">
			<label class="form-label">Hometown</label>
			<select class="form-control" asp-for="hometown" asp-items="Html.GetEnumSelectList<Friends_Web_App.Models.Hometown>()"></select>
			<span class="text-danger" asp-validation-for="hometown"></span>
		</div>
		<div class="mt-3">
			<label class="form-label">Description</label>
			<input type="text" class="form-control" asp-for="Description" />
		</div>
		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>
		</div>
    </form>
}
