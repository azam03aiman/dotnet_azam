@model Friends_Web_App.Models.GroupTaskViewModel

<h1>Edit Group Task</h1>

@if (Model == null)
{
    <p>No task found! Add one.</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Task ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Task Name</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="mt-3">
            <label class="form-label">Priority</label>
            <input type="number" class="form-control" asp-for="Priority" />
            <span class="text-danger" asp-validation-for="Priority"></span>
        </div>
        <div class="mt-3">
            <label class="form-label">Due Date</label>
            <input type="date" class="form-control" asp-for="DueDate" />
            <span class="text-danger" asp-validation-for="DueDate"></span>
        </div>
        <div class="mt-3">
            <label class="form-label">Task Completed</label>
            <input type="checkbox" class="form-check-input" asp-for="IsComplete" />
            <span class="text-danger" asp-validation-for="IsComplete"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}
