@model FriendsApp.Models.Post

<h2>Edit Post</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="Content">Content</label>
        <textarea class="form-control" id="Content" name="Content" required>@Model.Content</textarea>
    </div>

    <input type="hidden" name="PostId" value="@Model.PostId" /> <!-- Make sure to include the PostId if it's needed for editing -->

    <button type="submit" class="btn btn-primary">Save changes</button>
</form>
